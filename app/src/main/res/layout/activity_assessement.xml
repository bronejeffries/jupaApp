                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="0.4"
                    android:text="@string/assessment"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:padding="2dp"
                    android:layout_height="wrap_content" />

