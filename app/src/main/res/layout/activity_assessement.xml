<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AssessementActivity">


    <androidx.cardview.widget.CardView
        app:cardElevation="10dip"
        app:cardCornerRadius="5dip"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="15dip"
                android:gravity="center"
                android:text="@string/assess"
                android:textAllCaps="true"
                android:textStyle="bold|normal"
                android:textSize="21sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="0.4"
                    android:text="@string/project_assessed"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:padding="6dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/assessed_project_name"
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:text="@string/project_assessed"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:padding="6dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="0.4"
                    android:text="@string/assessment"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:padding="6dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/assessment_name"
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:text="@string/assessment"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:padding="6dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/question_category"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:padding="6dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/questions_category_spinner"
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:padding="8dip"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/question"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:padding="6dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/questions_spinner"
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:padding="8dip"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/full_question_display"
                    android:layout_marginTop="8dip"
                    android:layout_width="match_parent"
                    android:text="@string/question"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:padding="6dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/grade"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:padding="6dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/grade_spinner"
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:padding="8dip"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/other_remarks"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:padding="6dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/other_remarks"
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:padding="8dip"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dip"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/save_question_btn"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textSize="21sp"
                    android:padding="5dp"
                    android:textStyle="bold|normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>