<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dip"
    android:layout_marginBottom="6dip"
    android:layout_marginTop="3dip"
    app:contentPadding="4dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/project_image"
            android:src="@drawable/construction_icon_png_5"
            android:layout_width="0dip"
            android:layout_weight="0.4"
            android:layout_margin="6dip"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dip"
            android:layout_weight="0.6"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="3dip"
                android:layout_marginBottom="2dip"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/title"
                    android:textSize="18sp"
                    android:padding="5dip"
                    android:textStyle="bold|normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:hint="@string/title"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:padding="5dip"
                    android:id="@+id/project_title_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="3dip"
                android:layout_marginBottom="2dip"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/location"
                    android:textSize="18sp"
                    android:padding="5dip"
                    android:textStyle="bold|normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:hint="@string/location"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:padding="5dip"
                    android:id="@+id/project_location_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/client_contact"
                    android:textSize="18sp"
                    android:padding="5dip"
                    android:textStyle="bold|normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:hint="@string/client_contact"
                    android:textColorHint="@color/colorAccent"
                    android:padding="5dip"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:id="@+id/project_client_contact_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="3dip"
                android:layout_marginBottom="2dip"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/client_name"
                    android:textSize="18sp"
                    android:padding="5dip"
                    android:textStyle="bold|normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:hint="@string/client_name"
                    android:textColorHint="@color/colorAccent"
                    android:padding="5dip"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:id="@+id/project_client_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dip"
                android:layout_marginBottom="2dip"
                android:orientation="vertical"
                android:paddingRight="6dip"
                android:paddingEnd="6dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/view_project_btn"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical|end"
                    android:background="@color/colorPrimary"
                    android:text="@string/view_profile"
                    android:textSize="18sp"
                    android:padding="5dip"
                    android:textStyle="bold|normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>