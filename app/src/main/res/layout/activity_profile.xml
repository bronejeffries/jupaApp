<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity">

    <RelativeLayout
        android:paddingBottom="25dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/view_offset"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="230dip"
            android:background="@color/colorPrimary">
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_details_card"
            android:layout_below="@+id/profile_name"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dip"
            app:contentPaddingTop="15dip"
            app:contentPaddingBottom="15dip"
            android:layout_marginRight="5dip"
            android:layout_marginEnd="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginStart="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:text="@string/rank"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/rank_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:text="@string/rank"
                        android:textSize="19sp"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/rank_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/categoryView"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="@string/role"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/role_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:text="@string/role"
                        android:textSize="19sp"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/role_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/status_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:textSize="19sp"
                        android:drawableRight="@android:drawable/ic_menu_edit"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/colorPrimary"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/status_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/available"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/available_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/available"
                        android:textSize="19sp"
                        android:drawableRight="@android:drawable/ic_menu_edit"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/colorPrimary"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/available_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|start"
                        android:id="@+id/country"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textSize="19sp"
                        android:drawableRight="@android:drawable/ic_menu_edit"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/colorPrimary"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/address_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />
                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/country"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|start"
                        android:id="@+id/country_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/country"
                        android:textSize="19sp"
                        android:drawableRight="@android:drawable/ic_menu_edit"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/colorPrimary"
                        />

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/country_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/state"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/state_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/state"
                        android:textSize="19sp"
                        android:drawableRight="@android:drawable/ic_menu_edit"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/colorPrimary"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/state_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/city"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/city_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/city"
                        android:textSize="19sp"
                        android:drawableRight="@android:drawable/ic_menu_edit"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/colorPrimary"
                        />

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/city_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/contact"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/contact_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/contact"
                        android:textSize="19sp"
                        android:drawableRight="@android:drawable/ic_menu_edit"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/colorPrimary"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/contract_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/email_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textSize="19sp"
                        android:drawableRight="@android:drawable/ic_menu_edit"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/colorPrimary"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/email_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/date_of_birth"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/dob_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/date_of_birth"
                        android:textSize="19sp"
                        android:drawableRight="@android:drawable/ic_menu_edit"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/colorPrimary"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/dob_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/group_name"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/group_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/group_name"
                        android:textSize="19sp"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/group_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:gravity="center_horizontal|center"
                        android:id="@+id/category_profile_view"
                        android:layout_width="0dip"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:textSize="19sp"
                        android:drawableRight="@android:drawable/ic_menu_edit"
                        android:drawableEnd="@android:drawable/ic_menu_edit"
                        android:drawableTint="@color/colorPrimary"
                        />
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/category_progress"
                        android:layout_width="18dip"
                        android:layout_height="18dip" />
                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:gravity="end|center_vertical"
            android:layout_marginTop="25dip"
            android:layout_below="@id/profile_details_card"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/view_projects"
                android:layout_margin="8dip"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:text="@string/projects"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="26dip" />

            <Button
                android:id="@+id/view_skills"
                android:layout_margin="8dip"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="@string/skills"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="26dip" />

        </LinearLayout>


        <ImageView
            android:id="@+id/profile_image"
            android:layout_marginTop="20dip"
            android:src="@drawable/construction_icon_png_5"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dip"
            android:layout_below="@id/profile_image"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/profile_name"
            android:textStyle="bold|normal"
            android:text="@string/tumwesigye_godwin"
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>



</ScrollView>