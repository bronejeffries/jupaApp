<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterSubjectsActivity">

    <TextView
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:padding="@dimen/btn_layout_margintop"
        android:text="@string/no_subjects"
        android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_alignParentTop="true"
            android:id="@+id/cardView"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/subjects_holder"
                android:paddingLeft="@dimen/btn_layout_margintop"
                android:paddingStart="@dimen/btn_layout_margintop"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/text_view"
                android:text="@string/subjects"
                android:textSize="14sp"
                android:padding="@dimen/btn_layout_margintop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:padding="@dimen/fab_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subjects"
                />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:padding="@dimen/fab_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subjects"
                />

                </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="@dimen/fab_margin"
            android:background="@drawable/button_primary"
            android:text="@string/add_group"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>