<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pic_view"
                    android:src="@drawable/construction_icon_png_5"
                    android:layout_margin="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="75dp" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:id="@+id/candidate_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:id="@+id/candidate_regNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/question"
                android:textStyle="normal"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content" />

            <ImageButton
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:id="@+id/marks"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/other_remarks"
                android:visibility="gone"
                android:layout_marginTop="3dp"
                android:textSize="13sp"
                android:textStyle="normal|bold"
                android:id="@+id/remarks_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:layout_marginTop="3dp"
                android:textSize="13sp"
                android:textStyle="normal"
                android:id="@+id/assessment_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:background="@drawable/edit_text_background"
                android:hint="@string/comment"
                android:visibility="gone"
                android:padding="3dp"
                android:layout_marginTop="6dp"
                android:textSize="13sp"
                android:textStyle="normal"
                android:id="@+id/Institution_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:visibility="gone"
                android:id="@+id/close_gap_submit"
                android:layout_gravity="end|center_vertical"
                android:background="@color/white"
                android:textAllCaps="false"
                android:text="@string/add_group"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>