<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RequestApplicationViewActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/page_title"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dip"
            android:padding="12dip"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/apply_for_a_higher_rank"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:id="@+id/form_card"
            android:layout_below="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dip"
            app:cardCornerRadius="5dip">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="8dip"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dip"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:text="@string/reg_no"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/regno._view"
                        android:textSize="18sp"
                        android:padding="12dip"
                        android:hint="@string/reg_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="8dip"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dip"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:text="@string/years_of_experience"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/experience_view"
                        android:textSize="18sp"
                        android:padding="12dip"
                        android:hint="@string/years_of_experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rank_layout"
                    android:layout_marginBottom="8dip"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dip"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:text="@string/rank_applied_for"
                        android:textColor="@color/black"/>
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/rank_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp" />

                    <TextView
                        android:id="@+id/rank_applied_view"
                        android:textSize="18sp"
                        android:padding="12dip"
                        android:hint="@string/rank_applied_for"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/institution_layout"
                    android:layout_marginBottom="8dip"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dip"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:text="@string/institution"
                        android:textColor="@color/black"/>

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/institution_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp" />

                    <TextView
                        android:id="@+id/institution_applied_view"
                        android:textSize="18sp"
                        android:padding="12dip"
                        android:hint="@string/institution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="8dip"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dip"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:text="@string/present_qualifications"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/qualifications_view"
                        android:textSize="18sp"
                        android:padding="12dip"
                        android:gravity="start|top"
                        android:hint="@string/present_qualifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="8dip"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dip"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:text="@string/reason_for_applying"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/reason_for_application_view"
                        android:textSize="18sp"
                        android:padding="12dip"
                        android:gravity="start|top"
                        android:hint="@string/reason_for_applying"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_below="@+id/form_card"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:visibility="gone"
                android:layout_gravity="start"
                android:id="@+id/request_denial_btn"
                android:layout_margin="8dip"
                android:textColor="@color/white"
                android:text="@string/decline_request"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/button_gradient_accent"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:visibility="gone"
                android:layout_gravity="end"
                android:id="@+id/request_acceptance_btn"
                android:layout_margin="8dip"
                android:textColor="@color/white"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/button_gradient_background"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:visibility="gone"
                android:id="@+id/forward_btn"
                android:layout_gravity="end"
                android:layout_margin="8dip"
                android:textColor="@color/white"
                android:text="@string/forward"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/button_gradient_background"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>



</ScrollView>