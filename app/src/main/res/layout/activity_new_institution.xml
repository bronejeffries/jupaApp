<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewInstitutionActivity">

    <LinearLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/institution_name"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold|normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:padding="8dp"
                android:hint="@string/institution_name"
                android:textColorHint="@color/colorAccent"
                android:inputType="text"
                android:textSize="18sp"
                android:textStyle="normal"
                android:id="@+id/institutions_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/center_number"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold|normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/center_number"
                android:textColorHint="@color/colorAccent"
                android:inputType="text"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="normal"
                android:id="@+id/institutions_center_no_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/contact_person"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold|normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/contact_person"
                android:textColorHint="@color/colorAccent"
                android:inputType="text"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="normal"
                android:id="@+id/institutions_contact_person_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/telephone_number"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold|normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/telephone_number"
                android:textColorHint="@color/colorAccent"
                android:inputType="phone"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="normal"
                android:id="@+id/institutions_tel_number_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/physical_address"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold|normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/physical_address"
                android:textColorHint="@color/colorAccent"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="normal"
                android:id="@+id/institutions_physical_address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/email"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold|normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/email"
                android:textColorHint="@color/colorAccent"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="normal"
                android:id="@+id/institutions_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/website"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold|normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/website"
                android:textColorHint="@color/colorAccent"
                android:inputType="textUri"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="normal"
                android:id="@+id/institutions_website_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/facebook"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold|normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/facebook"
                android:textColorHint="@color/colorAccent"
                android:inputType="textUri"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="normal"
                android:id="@+id/institutions_facebook_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/about"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold|normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                android:hint="@string/present_qualifications"


            <EditText
                android:hint="@string/about_the_institution"
                android:id="@+id/institutions_about_input"
                android:textColorHint="@color/colorAccent"
                android:textSize="18sp"
                android:padding="12dip"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:lines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:onClick="selectBadge"
                android:id="@+id/attach_image"
                android:layout_gravity="center"
                android:background="@drawable/button_primary"
                android:clickable="false"
                android:text="@string/attach_badge"
                android:textSize="16sp"
                android:padding="3dp"
                android:textColor="@color/white"
                android:textStyle="bold|normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/construction_icon_png_5"
                android:layout_margin="12dp"
                android:inputType="text"
                android:textSize="21sp"
                android:textStyle="normal"
                android:id="@+id/institution_image_view"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:background="@drawable/button_gradient_background"
                android:text="@string/add_group"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="normal"
                android:id="@+id/save_institution"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>